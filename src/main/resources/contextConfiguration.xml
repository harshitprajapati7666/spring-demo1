<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean id="name" class="java.lang.String">
        <constructor-arg value="Ranga"/>
    </bean>

    <bean id="age" class="java.lang.Integer">
        <constructor-arg value="35"/>
    </bean>

    <!--    <context:component-scan base-package="com.harshitprajapati.learnspringframework.game"/>-->

    <bean id="game" class="com.harshitprajapati.learnspringframework.game.PacManGame"/>
    <bean id="gameRunner" class="com.harshitprajapati.learnspringframework.game.GameRunner">
        <constructor-arg ref="game"/>
    </bean>
</beans>